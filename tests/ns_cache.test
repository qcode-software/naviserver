test cache-5.8 {cache flush concurrent} -body {
    ns_cache_eval -expires [ns_time incr [ns_time get] 1] c1 k1 {return a}
    ns_thread begindetached {
        after 1200
        ns_cache_eval c1 k1 {after 1000; return b}
    }
    ns_thread yield
    after 1500
    ns_cache_flush c1
    ns_thread yield
    after 1000
    ns_cache_eval c1 k1 {return c}
} -cleanup {
    ns_cache_flush c1
} -result b




